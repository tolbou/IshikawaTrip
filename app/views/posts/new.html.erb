<h1 class="text-2xl font-bold mb-4">新規投稿</h1>
<%= form_with model: @post, local: true do |form| %>
<div class="mb-4">
    <%= form.label :title, "スポット名", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "shadow appearance-none border border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-black" %>
</div>
<div class="mb-4">
    <%= form.label :address, "住所", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :address, class: "shadow appearance-none border border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-black" %>
</div>
<div class="mb-4">
    <%= form.label :report, "おすすめポイント", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :report, class: "shadow appearance-none border border-black rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-black" %>
</div>
<div>
    <%= form.submit "送信", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
</div>
<% end %>